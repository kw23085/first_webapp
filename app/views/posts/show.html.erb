<%= link_to("Home", root_path) %>

<h1><%= @post.title %></h1>
<%= image_tag(@post.picture_url) %>
<h2><%= @post.body %></h2>

<%= link_to("Edit", edit_post_path(@post)) %>
<%= link_to("Delete", post_path(@post), method: 'delete') %>

<p>Posted by: <%= @post.user.name %></p>
<p><%= time_ago_in_words(@post.created_at) %> ago</p> 

<hr />